{
  "name": "kento-desktop",
  "version": "0.0.1",
  "description": "Kento Shogi Desktop",
  "main": "build/main.js",
  "scripts": {
    "start": "electron build/main",
    "build": "tsc",
    "watch": "tsc -w",
    "package": "tsc && CSC_IDENTITY_AUTO_DISCOVERY=false build --mac --x64",
    "release": "tsc && CSC_IDENTITY_AUTO_DISCOVERY=false build --mac --x64"
  },
  "author": "na-o-ys",
  "license": "ISC",
  "build": {
    "appId": "io.na-o-ys.kento-desktop",
    "productName": "Kento",
    "files": [
      "build/",
      "index.html",
      "img/"
    ],
    "mac": {
      "target": "dmg",
      "publish": ["github"]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "electron-json-storage": "^4.0.2",
    "json-kifu-format": "^1.1.0",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.10",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "split": "^1.0.0"
  },
  "devDependencies": {
    "@types/electron-json-storage": "^4.0.0",
    "@types/lodash": "^4.14.68",
    "@types/node": "^8.0.6",
    "@types/react-modal": "^3.1.0",
    "@types/react-redux": "^5.0.14",
    "@types/split": "^0.3.28",
    "electron": "^1.7.10",
    "electron-builder": "^19.49.2",
    "typescript": "^2.6.2"
  }
}
