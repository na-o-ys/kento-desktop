{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "lib": [
            "dom",
            "es2017"
        ],
        "outDir": "build",
        "inlineSourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}
