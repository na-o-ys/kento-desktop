{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "lib": [
            "dom",
            "es2017"
        ],
        "outDir": "build",
        "inlineSourceMap": true,
        "jsx": "react",
        "baseUrl": "./src",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/**/*",
        "node_modules/electron/electron.d.ts",
        "node_modules/electron-updater/out/*.d.ts",
        "node_modules/electron-builder-http/out/*.d.ts"
    ]
}
